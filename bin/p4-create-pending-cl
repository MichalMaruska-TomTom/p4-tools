#! /bin/bash -eu
set -o pipefail

usage()
{
    cat <<EOF
$0 [message]
EOF
}

while getopts :h OPT; do
    case $OPT in
	h|+h)
	    usage
	    exit 0
	    ;;
	*)
	    echo "usage: ${0##*/} [+-h} [--] ARGS..."
	    exit 2
    esac
done

shift $(( OPTIND - 1 ))
OPTIND=1

if [ $# != 1 ]
then
    usage
    exit 1
fi


${P4SHARE:-/usr/share/p4-tools}/new-changelist-template "$1" |\
p4 change -i |\
sed -e 's/Change \([0-9]\+\) created\./\1/'
